                                        @Html.DisplayFor(modelItem => item.C17)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.C18)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.C19)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.C20)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.C21)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.C22)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.C23)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <table id="gridDataSum" class="table table-striped table-bordered table-striped-dk" style=" width:20%;  float:left">
                        <thead>
                            <tr>
                                <th colspan="6">Summary</th>
                            </tr>
                            <tr>
                                <th>Day</th>
                                <th data-toggle="tooltip" data-placement="top" data-original-title="Maximum hourly average for a given day" data-container="body">Max</th>
                                <th data-toggle="tooltip" data-placement="top" data-original-title="Minimum hourly average for a given day" data-container="body">Min</th>
                                <th data-toggle="tooltip" data-placement="top" data-original-title="The mean or average value of all hourly averages for a given day. For some parameters such as wind speed this will be angular average." data-container="body">Avg</th>
                                <th data-toggle="tooltip" data-placement="top" data-original-title="The standard deviation of the hourly averages from the mean for a given day" data-container="body">STD</th>
                                <th data-toggle="tooltip" data-placement="top" data-original-title="The calculated capture rate based on number of valid hourly averages divided by sample interval" data-container="body">Cap</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ResultSums)
                            {
                                <tr class="">
                                    <td class="celldk">
                                        @Html.DisplayFor(modelItem => item.DAY1)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MAX)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MIN)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AVG)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.STDEV)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CAP)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
        <div class="row">
            <div class="col-md-12">
                <h5>Notes:</h5>
                <ul>
                    <li>
                        Maximum daily values are <span class="max">red bold</span> within the table.
                    </li>
                    <li>
                        This data has not been verified by QREST tribal professionals and may change. This is the most current data, but it is not official until it has been certified by tribal technical staff. Data is collected from ambient monitoring sites and updated hourly.
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>

<style>
    .panel .table td, .panel .table th {
        padding: 2px 6px;
        text-align: center;
    }
</style>
@section Scripts {
    <script>

        //******* highlight max values **************
        $('#gridData tbody tr').each(function() {
            var $tds = $(this).find('td:not(:first-child)');
            var values = $tds.map(function () {
                return parseFloat($(this).text().trim()) || -999;
          }).get();
          $tds.eq(values.reduce((iMax, x, i, arr) => x > arr[iMax] ? i : iMax, 0)).addClass('max');
        });


        $(document).ready(function () {

            //update monitor dropdown
            var url = '@Url.Action("FetchMonitorsBySite")';
            var mons = $('#selMon');
            $('#selSite').change(function () {
                mons.empty();
                $.getJSON(url, { ID: $(this).val() }, function (data) {
                    if (!data) {
                        return;
                    }
                    mons.append($('<option></option>').val('').text('Please select'));
                    $.each(data, function (index, item) {
                        mons.append($('<option></option>').val(item.Value).text(item.Text));
                    });
                });
            });
        });
    </script>
}