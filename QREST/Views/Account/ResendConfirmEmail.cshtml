@model QREST.Models.ForgotPasswordViewModel
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewBag.Title = "Resend Confirmation Email";
}

@using (Html.BeginForm("ResendConfirmEmail", "Account", FormMethod.Post, new { @class = "panel-body wrapper-lg", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <p>Enter your QREST email address you registered with. If you have not yet confirmed your email, a confirmation email will be re-sent to you.</p>
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control input-lg" })
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Email Link" />
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

