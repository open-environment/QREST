@using QREST.App_Logic.BusinessLogicLayer
@model QREST.Models.vmSitePollOffline
@{
    ViewBag.Title = "Taking Polling Offline";
    ViewBag.HelpLink = "Polling-Configuration";
}

@using (Html.BeginForm("SitePollOffline", "Site", FormMethod.Post, new { @id = "norepostform", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.POLL_CONFIG_IDX)

    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        <label class="control-label">Enter the reason why you are taking the polling offline.</label>
        @Html.TextAreaFor(model => model.OfflineReason, new { @class = "form-control", @maxlength = "150" })
        @Html.ValidationMessageFor(m => m.OfflineReason, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <a href="@Url.Action("SitePollConfig", new { Model.SITE_IDX })" class="btn btn-default">Cancel</a>
        <input type="submit" class="btn btn-primary" value="Confirm" />
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
