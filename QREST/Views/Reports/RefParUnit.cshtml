@model QREST.Models.vmReportsRefParUnit
@{
    ViewBag.Title = "Reference Data  / Reference Parameter Units";
    ViewBag.HideTitle = true;
    ViewBag.selOpt = "ParUnit";
    ViewBag.HelpLink = "Reference-Data";
}

@Html.Partial("_RefDataTopNav")

<section class="panel panel-qrest">
    <header class="panel-heading font-bold">
        Parameter Units
    </header>
    <div class="panel-body">
        <div class="table-responsive">
            <div class="table-responsive">
                <table id="gridData" class="table table-striped table-bordered" data-ride="datatables" style="width:100%">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Par Code</th>
                            <th>Par Name</th>
                            <th>Unit Code</th>
                            <th>Unit Name</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
        @if (User.IsInRole("GLOBAL ADMIN"))
        {
            <a id="add-it" href="#modal-form" data-toggle="modal" data-id="" class="btn btn-sm btn-primary btn-rounded modal-it"><i class="fa fa-plus"></i> Add Parameter Unit</a>
        }

    </div>
</section>



<!-- START EDIT MODAL  -->
<div class="modal fade" id="modal-form" style="display: none;" aria-hidden="true">
    <div class="modal-dialog" style="width:600px">

        @using (Html.BeginForm("RefParUnitEdit", "Reports", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="modal-content">
                <div class="modal-header">
                    <h4 style="float: left" class="modal-title">Add Parameter Units</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Parameter</label>
                                @Html.DropDownListFor(model => model.editPAR_CODE, Model.ddl_par, "", new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Unit</label>
                                @Html.DropDownListFor(model => model.editUNIT_CODE, Model.ddl_units, "", new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="btnSave" type="submit" class="btn btn-primary">Save</button>
                    <button class="btn btn-default" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        }
    </div>
</div>
<!-- END NOTIFY MODAL -->

@Html.Partial("_PleaseWait", "Shared")
@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/datatables")
    @Scripts.Render("~/bundles/confirm-delete")
<script type="text/javascript">

        $(document).ready(function () {

            // datatable initialization
            $("#gridData").DataTable({
                "responsive": true,
                "serverSide": true,
                "processing": true,
                "orderMulti": false,
                "lengthChange": false,
                "paging": true,
                "pageLength": 50,
                "pagingType": "full_numbers",
                "info": false,
                "searching": false,
                "ajax": {
                    "url": "@Url.Action("RefParUnitData", "Reports")",
                    "type": "POST",
                    "datatype": "json"
                },
                "columns": [
                    {
                        "render": function (data, type, row) {
                            return '<div class="delete-section" style="display:inline-block;"><a class="btn btn-rounded btn-xs btn-danger delete-link"><i class="fa fa-times"></i></a><div class="btn btn-rounded btn-xs btn-warning delete-confirm" style="display:none" data-delete-id="'
                                + row.PAR_CODE + '" data-delete-id2="' + row.UNIT_CODE + '" data-delete-path="@(Url.Content("~/"))" data-delete-p="/Reports/RefParUnitDelete"><b>Confirm Delete</b></div></div>';
                        }
                    },
                    { "data": "PAR_CODE", "name": "PAR_CODE", "autoWidth": true },
                    { "data": "PAR_NAME", "name": "PAR_NAME", "autoWidth": true },
                    { "data": "UNIT_CODE", "name": "UNIT_CODE", "autoWidth": true },
                    { "data": "UNIT_DESC", "name": "UNIT_DESC", "autoWidth": true }
                ],
                "createdRow": function (row, data, dataIndex) {
                    $('td:eq(0)', row).css('width', '90px');
                    $('td:eq(0)', row).css('min-width', '90px');
                    $('td:eq(0)', row).css('padding-right', '0px');
                    $('td:eq(0)', row).css('white-space', 'nowrap');
                }
            });

        });

</script>

}
